<h1>This is users show</h1>

<div class="user-div">
  <h1><%= @user.username %></h1>
  <h3><%= @user.email %></h3>
  <p>
    <%= @user.bio %>
  </p>
</div>

<%= link_to "Edit", edit_user_path(@user) %>
<%= link_to "Return to Users", users_path %>
<%= link_to "Delete", user_path(@user), data: {confirm: "You sure?", method: :delete} %>
